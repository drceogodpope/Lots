<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/site_card"
        app:cardElevation="3dp"
        android:background="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorDarkBackground"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/site_card_name"
                    style="@style/Base.TextAppearance.AppCompat.Headline"
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:text="Lotus Pointe"
                    android:textColor="@color/colorLightText"/>
               <com.heapdragon.lots.LotDot
                   android:visibility="gone"
                   android:id="@+id/site_card_arch_dot"
                   android:layout_margin="20dp"
                   android:layout_width="50dp"
                   android:background="@drawable/circle"
                   android:layout_alignParentEnd="true"
                   android:layout_height="1dp"/>
            </RelativeLayout>


            <FrameLayout
                android:id="@+id/site_card_frame_layout"
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/site_card_total_lots"
                    android:layout_width="match_parent"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorLightText"
                    android:text="153 lots"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </LinearLayout>



    </android.support.v7.widget.CardView>

