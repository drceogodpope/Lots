<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="top"
    android:background="@color/colorDarkBackground"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/site_activity_toolbar_title"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:text="Add Site"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:id="@+id/add_site_linearLayout"
    android:layout_below="@id/appbar"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/add_site_activity_name"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorLightGrey"
        android:hint="Site name"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/add_site_activity_total_lots"
        android:layout_width="match_parent"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Number of lots"
        android:inputType="number"
        android:textColorHint="@color/colorLightGrey"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/add_site_activity_model_numbers"
        android:layout_width="match_parent"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Model Numbers"
        android:inputType="number"
        android:textColorHint="@color/colorLightGrey"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/colorPicker"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/colorAmber"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@color/colorAmber"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/photo_library_grey_96x96"/>
    </LinearLayout>


    <Button
        android:id="@+id/add_site_activity_create_site_button"
        android:layout_width="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:layout_gravity="center"
        android:textColor="@color/colorLightGrey"
        android:layout_height="wrap_content"
        android:background="@color/colorGrey"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="Create Site"/>
</LinearLayout>


</RelativeLayout>