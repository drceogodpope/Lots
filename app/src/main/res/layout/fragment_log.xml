<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/log_frag_cardview"
    app:cardBackgroundColor="@color/colorDarkBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:animateLayoutChanges="true"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/log_fragment_recyclerView"
            android:animateLayoutChanges="false"
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:background="@color/colorDarkBackground"
            android:nestedScrollingEnabled="false"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/no_logs_layout"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorLightGrey"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
                android:layout_margin="20dp"
                android:text="No Log Info Found"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:src="@drawable/no_logs"/>
        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>