<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="@color/colorDarkBackground"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:animateLayoutChanges="true"
        android:id="@+id/arch_lot_frame"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">
        <Switch
            android:text="ARCH LOT "
            android:textAlignment="center"
            android:id="@+id/arch_lot_switch"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:backgroundTint="@color/colorGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/arch_ordered_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorGreen"
            android:layoutDirection="rtl"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            style="@style/Base.Widget.AppCompat.CompoundButton.RadioButton"
            android:text="ARCH\nORDERED " />
    </RelativeLayout>

</android.support.v7.widget.CardView>